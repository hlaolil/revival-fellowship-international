<%- include('partials/header') -%>
  <main class="options-container">
    <section class="hero">
        <picture>
            <source srcset="/images/hero.webp" media="(min-width: 500px)">
            <img src="/images/hero1.webp" alt="Chamber hero">
        </picture>
        <h1>Revival Fellowship International</h1>
        <a href="/join" class="join-button">Get Involved</a>
    </section>
    <h1>How would you like to get involved?</h1>

    <div class="option-grid">
      <% options.forEach(opt => { %>
        <a href="<%= opt.href %>" class="option-btn">
          <i class="fas <%= opt.icon %>"></i>
          <span><%= opt.label %></span>
        </a>
      <% }) %>
    </div>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
